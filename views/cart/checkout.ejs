<% layout("/layouts/boilerplate") %>
<br />
<br />
<main
  class="container mx-auto px-6 py-12 flex items-center justify-center min-h-screen"
>
  <div class="col-6 offset-3 my-4 offerContainer text-center">
    <br />
    <br />
    <h1 class="text-center font-bold text-2xl">Checkout</h1>
    <!-- âœ… Fix 4: Removed inline styles -->
    <p class="mb-2 mt-4 text-lg text-gray-600" style="font-size: 1.2rem">
      Proceed to rent the listing: <strong><%= listing.title %></strong>
    </p>
    <p
      class="mb-4 text-xl font-semibold text-gray-800"
      style="font-size: 1.2rem"
    >
      Price: â‚¹ <%= Math.round(listing.price * rentalDays * 1.18) %> (  inclusive of
      taxes )
    </p>

    <!-- Razorpay Button -->
    <div class="flex justify-center">
      <button id="rzp-button1" class="btn btn-outline-light">
        <i class="fas fa-money-bill" style="padding-right: 10px"></i
        ><b>Proceed to Pay</b>
      </button>
    </div>
    <br />
    <br />
  </div>
</main>
<br />

<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  var options = {
      key:  "rzp_test_1DP5mmOlF5G5ag", // âœ… Fix 2: Use dynamic key from env variable
      amount: <%= Math.round(listing.price * rentalDays * 118) %>, // âœ… Fix 1: Correct amount in paise
      currency: "INR",
      name: "Visitly Rentals", // âœ… Fix 3: Added branding
      description: "Visitly - Rent Listing",
      image: "/images/logo-transparent-svg.svg",
      prefill: {
          email: "<%= user.email %>",
          contact: "<%= user.contact || '' %>", // âœ… Fix 5: Safe fallback for contact
      },
      theme: {
          color: "#155d5d",
          font: "Arial, sans-serif",
      },
      config: {
          display: {
              blocks: {
                  utib: {
                      name: "Pay using Axis Bank",
                      instruments: [
                          { method: "card", issuers: ["UTIB"] },
                          { method: "netbanking", banks: ["UTIB"] },
                      ],
                  },
                  other: {
                      name: "Other Payment modes",
                      instruments: [
                          { method: "card", issuers: ["ICIC"] },
                          { method: "netbanking" },
                      ],
                  },
                  banks: {
                      name: "Most Used Methods",
                      instruments: [
                          { method: "wallet", wallets: ["freecharge"] },
                          { method: "upi" },
                      ],
                  },
              },
              sequence: ["block.utib", "block.other", "block.banks"],
              preferences: {
                  show_default_blocks: false,
              },
          },
      },
      handler: function (response) {
          console.log("âœ… Razorpay Payment Successful:", response);

          fetch("/rent/payment-success", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({
                  payment_id: response.razorpay_payment_id,
                  listing_id: "<%= listing._id %>",
              }),
          })
          .then(res => res.json())
          .then(data => {
              console.log("ðŸ“¨ Server Response:", data);
              if (data.success) {
                  alert("âœ… Payment Successful! Order Approved");
                  window.location.href = data.redirectUrl;
              } else {
                  alert("âš  Payment successful, but order processing failed.");
              }
          })
          .catch(err => console.error("ðŸš¨ Fetch Error:", err));
      },
      modal: {
          ondismiss: function () {
              if (confirm("Are you sure, you want to close the form?")) {
                  console.log("Checkout form closed by the user");
              } else {
                  console.log("Complete the Payment");
              }
          },
      },
  };

  var rzp1 = new Razorpay(options);
  document.getElementById("rzp-button1").onclick = function (e) {
      console.log("ðŸŸ¢ Opening Razorpay Checkout...");
      rzp1.open();
      e.preventDefault();
  };
</script>